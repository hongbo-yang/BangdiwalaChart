citHeader("To cite package BangdiwalaChart in publications, please use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry = "Manual",
  title = "BangdiwalaChart: Bangdiwala Chart Function",
  author = "Chaitra Nagaraja", "Haikady Nagaraja",
  "Pankaj Choudhary", "Hongbo Yang",
  year = year,
  note = vers
)
